<div class="container">
  <div class="row sign-up-form center-align">
    <div class="col s12 l12 m12">
      <div class="card-panel">
        <h3 class="header">Login</h3>
        <div class="row">
          <%= form_with(scope: :session, url: login_path , local: true, html: { class: 'col s12' }) do |f| %>
            <div class="row">
              <div class="input-field col s12">
                <i class="material-icons prefix">email</i>
                <%= f.email_field :email, autofocus: true %>
                <%= f.label :email %>
              </div>
              <div class="input-field col s12">
                <i class="material-icons prefix">password</i>
                <%= f.password_field :password %>
                <%= f.label :password %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%= f.button 'Log in', class: 'btn waves-effect waves-light right' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
