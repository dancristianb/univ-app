<%= render 'students/errors' %>

<div class="container">
  <div class="row sign-up-form center-align">
    <div class="col s12 l12 m12">
      <div class="card-panel">
        <h3 class="header">Edit student information</h3>
        <div class="row">
          <%= form_with(model: @student, local: true) do |f| %>
            <div class="row">
              <div class="input-field col s6">
                <i class="material-icons prefix">account_circle</i>
                <%= f.text_field :name, autofocus: true %>
                <%= f.label 'Name' %>
              </div>
              <div class="input-field col s6">
                <i class="material-icons prefix">email</i>
                <%= f.email_field :email %>
                <%= f.label :email %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%= f.submit class: 'btn waves-effect waves-light right' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
