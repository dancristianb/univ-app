<div class="row">
  <div class="col s12 center-align">
    <h1><%= @student.name %>'s profile</h1>
  </div>
</div>

<div class="row">
  <div class="col s12 m12">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">Name:<%= @student.name %></span>
        <p>Email:<%= @student.email %></p>
        <p>Course enrollments</p>
      </div>
      <% if @student == current_user %>
        <div class="card-action">
          <%= link_to edit_student_path(@student), class: 'btn waves-effect waves-light' do %>
            <i class="material-icons right">create</i>Edit student profile
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
